        <Grid Name="Online_Grid" Grid.Column="3" Grid.Row="1" Background="#1f2731" HorizontalAlignment="Right" Width="221">
            <StackPanel Background="Transparent" VerticalAlignment="Top" Margin="0,10,0,0">
                <TextBlock Text="Online" FontFamily="TYPOGRAPH PRO" HorizontalAlignment="Left" Margin="20,0,0,0" FontSize="15" Foreground="Gray"/>
                <DockPanel VerticalAlignment="Top">
                    <ListView x:Name="ListViewUsers"
                          VerticalAlignment="Top"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.CanContentScroll="True"
                          Background="Transparent" BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Height="30" Orientation="Horizontal" MouseRightButtonDown="channelUser_Menu_Open">
                                    <StackPanel.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Foreground="White" Header="Message" Click="Open_privateMessage"/>
                                            <MenuItem Foreground="White" Header="Add Friend" Click="Send_friendRequest"/>
                                            <MenuItem Foreground="White" Header="Kick User" Click="Kick_channelUser"/>
                                            <MenuItem Foreground="White" Header="Transfer Admin" Click="Transfer_channelAdmin"/>
                                            <MenuItem Foreground="DarkRed" Header="Ban User" Click="Ban_channelUser"/>
                                        </ContextMenu>
                                    </StackPanel.ContextMenu>
                                    <Ellipse Height="30" Width="30" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="20,0,0,0">
                                        <Ellipse.Fill>
                                            <ImageBrush Stretch="UniformToFill" ImageSource="{Binding Avatar}"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Border BorderThickness="0" CornerRadius="20" Width="10" Height="10" Background="{Binding Status}" Margin="-10,20,0,0"/>
                                    <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" Margin="5,0,0,0" VerticalAlignment="Center" FontSize="15" Foreground="GhostWhite" FontFamily="TYPOGRAPH PRO"/>
                                    <Image Source="pack://application:,,,/Images/Icons/admin.png" Height="15" Margin="5,0,0,0" Visibility="{Binding isAdmin}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </StackPanel>
        </Grid>
    </Grid>
